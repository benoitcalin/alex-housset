<div class="artworks-wrapper">

  <div class="artworks-header">
    <div class="artist-content">
      <h1>Alex Housset</h1>
      <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Magni iure facilis consequatur eveniet fugiat laboriosam dolore itaque ratione alias ad.</p>
    </div>
  </div>

  <div class="artworks-inner-wrapper">
    <div class="artworks-index">
      <div class="grid">

        <% data.art.artworks.each do |artwork| %>

          <%# miniature images of the artworks %>
            <div class="miniature" style="<%= artwork.style %>">
              <%= image_tag artwork.image, alt: artwork.name, class: 'artwork', id: "artwork-#{artwork.id}" %>

              <div class="filter">
                <h2><%= artwork.name %></h2>
              </div>
            </div>

          <%# modal %>

          <div class="modal"></div>

        <% end %>

      </div>
    </div>
  </div>
</div>


