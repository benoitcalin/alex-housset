<% artwork = @artwork %>

<div class="modal" id="modal-<%= artwork.id %>">
  <div class="modal-background">

    <div class="row">
      <div class="col-sm">
        <div class="modal-img">
          <%= image_tag artwork.image, alt: artwork.name %>
        </div>
        <div class="modal-title">
          <%= image_tag artwork.title, alt: artwork.name %>
        </div>
      </div>
      <div class="col-sm">
        <div class="modal-text">
          <%= image_tag artwork.texte, alt: artwork.name %>
        </div>
      </div>
      <div class="col-sm player">
        <%# Boucle temporaire -> complÃ©ter le yml %>
        <%  if artwork.soundcloud_url.nil?
              artwork_url = 'https://soundcloud.com/word-alexhousset/white-is-it'
            else
              artwork_url = artwork.soundcloud_url
            end
        %>

        <iframe width="100%" height="166" scrolling="no" frameborder="no" allow="autoplay"
        src="https://w.soundcloud.com/player/?url=<%= artwork_url %>&amp;{ auto_play=true }">
        </iframe>
      </div>
    </div>

    <div class="modal-button">
      <button type="button" class="btn btn-secondary" id="return-<%= artwork.id %>">
        Retour aux oeuvres
      </button>
    </div>
  </div>
</div>
