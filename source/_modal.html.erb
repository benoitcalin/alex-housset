<% artwork = @artwork %>

<div class="modal" id="modal-<%= artwork.id %>">
  <div class="modal-background">

    <div class="row modal-row">

      <% if artwork.texte.nil? %>

        <div class="<%= artwork.col_class %>" >
          <div class="modal-img">
            <% if artwork.nb_images == 1 %>
              <%= image_tag artwork.image, alt: artwork.name %>
            <% else %>
              <%= partial 'carousel' %>
            <% end %>
          </div>
          <div class="modal-title">
            <%= image_tag artwork.title, alt: artwork.name %>
          </div>
        </div>

      <% else %>

        <div class="<%= artwork.col_class %>" >
          <div class="modal-img">
            <% if artwork.id == 22 %>
              <%= image_tag artwork.image, class: "#{artwork.img_class}", alt: artwork.name %>
            <% elsif artwork.nb_images == 1 %>
              <%= image_tag artwork.image, alt: artwork.name %>
            <% else %>
              <%= partial 'carousel' %>
            <% end %>
          </div>
          <% if !artwork.title.nil? %>
            <div class="modal-title">
              <%= image_tag artwork.title, alt: artwork.name %>
            </div>
          <% end %>
        </div>

        <div class="<%= artwork.col_class %> centered-text">
          <div class="modal-text">
            <%= image_tag artwork.texte, alt: artwork.name %>
          </div>
        </div>

      <% end %>
    </div>

    <% if !artwork.soundcloud_url.nil? %>
      <div class="row modal-row">
        <div class="col-sm modal-col player">
          <iframe width="100%" height="166" scrolling="no" frameborder="no" allow="autoplay"
          src="https://w.soundcloud.com/player/?url=<%= artwork.soundcloud_url %>&amp;{ auto_play=true }">
          </iframe>
        </div>

      </div>
    <% end %>

    <!-- Bouton retour -->
    <div class="modal-button" id="return-<%= artwork.id %>">

      <%= image_tag 'return.png', alt: 'Retour aux oeuvres' %>

    </div>
  </div>
</div>
