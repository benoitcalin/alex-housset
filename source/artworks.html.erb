<div class="artworks-wrapper">

  <!-- Header -->
  <%= partial "artworks_header" %>

  <div class="artworks-inner-wrapper">
    <div class="artworks-index">
      <div class="grid">

        <% data.art.artworks.each do |artwork| %>
          <% @artwork = artwork %>

          <!-- Miniature images of the artworks -->
          <div class="miniature" style="<%= artwork.style %>" id="<%= artwork.id %>">
            <% if artwork.nb_images == 1 %>
              <%= image_tag artwork.image, alt: artwork.name, class: 'artwork', id: "artwork-#{artwork.id}" %>
            <% else %>
              <%= image_tag artwork.image.to_a.first, alt: artwork.name, class: 'artwork', id: "artwork-#{artwork.id}" %>
            <% end %>

            <div class="filter">
            </div>
          </div>

          <!-- Modal -->
          <%= partial "modal" %>

        <% end %>

      </div>
    </div>
  </div>

</div>

<div class='mentions'>
  <span>Copyright  © Alex Housset - <%= link_to 'mentions légales', 'mentions.html', class: 'mentions-link' %></span>
</div>
