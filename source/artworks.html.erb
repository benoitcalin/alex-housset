<div class="artworks-wrapper">

  <div class="artworks-header">
    <div class="artist-content">
      <div class='title-div'>
        <%= image_tag '0-name-title.png', alt: 'Alex Housset', class: 'title' %>
      </div>
      <div class="links">
        <% link_to 'https://www.instagram.com/alexhousset/' do %>
            <%= image_tag '0-instagram.png', alt: 'Alex Housset - Instagram' %>
        <% end %>
        <% link_to 'https://www.instagram.com/alexhousset/' do %>
            <%= image_tag '0-contact.png', alt: 'Alex Housset - Contact' %>
        <% end %>
        <% link_to 'https://www.instagram.com/alexhousset/' do %>
            <%= image_tag '0-exhibitions.png', alt: 'Alex Housset - Exhibitions' %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="artworks-inner-wrapper">
    <div class="artworks-index">
      <div class="grid">

        <% data.art.artworks.each do |artwork| %>
        <% @artwork = artwork %>

        <%# miniature images of the artworks %>
          <div class="miniature" style="<%= artwork.style %>" id="<%= artwork.id %>">
            <%= image_tag artwork.image, alt: artwork.name, class: 'artwork', id: "artwork-#{artwork.id}" %>

            <div class="filter">
              <h2><%= artwork.name %></h2>
            </div>
          </div>

          <%# modal %>
          <%= partial "modal" %>

        <% end %>

      </div>
    </div>
  </div>
</div>
