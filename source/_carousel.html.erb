<% artwork = @artwork %>
<% images = artwork.image.to_a %>

<div id="carousel-<%= artwork.id %>" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">

    <% images.each_with_index do |image, index| %>
      <% if index == 0 %>
        <li data-target="#carousel-<%= artwork.id %>" data-slide-to="0" class="active"></li>
      <% else %>
        <li data-target="#carousel-<%= artwork.id %>" data-slide-to="#{index}"></li>
      <% end %>
    <% end %>

  </ol>
  <div class="carousel-inner">
    <% images.each_with_index do |image, index| %>
      <% if index == 0 %>
        <div class="carousel-item active">
          <%= image_tag image, alt: artwork.name, class: 'd-block w-100' %>
        </div>
      <% else %>
        <div class="carousel-item">
          <%= image_tag image, alt: artwork.name, class: 'd-block w-100' %>
        </div>
      <% end %>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carousel-<%= artwork.id %>" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carousel-<%= artwork.id %>" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
